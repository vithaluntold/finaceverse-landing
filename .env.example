# Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=finaceverse.io
MAILGUN_MAILING_LIST=newsletter@finaceverse.io

# Example:
# MAILGUN_API_KEY=key-1234567890abcdef1234567890abcdef
# MAILGUN_DOMAIN=mg.finaceverse.io
# MAILGUN_MAILING_LIST=newsletter@mg.finaceverse.io

# Google Analytics Configuration
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Backend API Configuration
REACT_APP_API_URL=http://localhost:5000/api

# Backend Server Configuration (for server.js)
PORT=5000
NODE_ENV=development

# PostgreSQL Configuration (Railway Postgres)
DATABASE_URL=postgresql://localhost:5432/finaceverse_analytics
# For Railway Postgres (automatically provided by Railway):
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379
# For Redis Cloud:
# REDIS_URL=redis://default:password@redis-12345.cloud.redislabs.com:12345

# JWT Authentication
JWT_SECRET=your-secure-jwt-secret-change-in-production-min-32-chars
ADMIN_SECRET_KEY=your-admin-creation-secret-keep-this-private

# Google Cloud API (for PageSpeed Insights, optional)
GOOGLE_API_KEY=your_google_cloud_api_key_here

# IP Geolocation (optional, uses ipapi.co free tier by default)
# IPAPI_KEY=your_ipapi_key_for_higher_rate_limits
